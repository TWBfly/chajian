{
    "manifest_version": 3,
    "name": "Gemini 回复下载器",
    "version": "1.0",
    "description": "下载 Gemini 页面中 model-response 元素的纯文字内容并保存为 Markdown 文件",
    "permissions": [
        "activeTab",
        "downloads",
        "scripting"
    ],
    "host_permissions": [
        "https://gemini.google.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://gemini.google.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}